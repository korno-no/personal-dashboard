{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Debug Angular (Frontend)",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/"
    },
    {
      "name": "Debug Angular Tests",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "name": "Debug Backend (Node.js)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Frontend + Backend)",
      "configurations": ["Debug Angular (Frontend)", "Debug Backend (Node.js)"],
      "stopAll": true
    }
  ]
}
